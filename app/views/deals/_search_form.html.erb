<%= search_form_for @q do |f| %>


  <%= f.label 'Search by title', style: 'margin: auto 1vw'%>
    <%= f.search_field :title_cont, placeholder: 'Title', style: 'margin: auto 1vw'%>
    <%= f.label "Filter by status ", style: 'margin: auto 1vw' %>
    <%= f.select :status_cont, ['New', 'In Progress', 'Done'], style: 'margin: auto 1vw' %>
  <%= f.submit "Search", style: 'margin: auto 1vw',class:"btn btn-outline-info btn-sm" %>
  <%= link_to 'Reset', deals_path,class:"btn btn-outline-dark btn-sm" %>


<% end %>